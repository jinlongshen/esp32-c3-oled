{
    "name": "ESP-IDF Local",
    "image": "ghcr.io/jinlongshen/esp-idf-c3-dev:latest",
    "remoteUser": "root",

    "customizations": {
        "vscode": {
            "extensions": [
                "ms-vscode.cpptools",
                "espressif.esp-idf-extension"
            ]
        }
    },

    "mounts": [
        "source=/dev/bus/usb,target=/dev/bus/usb,type=bind"
    ],

    "runArgs": ["--privileged"]
}

